<div id="bg">
<div id="form2"><br>
<h3>register.</h3>
<%=form_for :register, url: pages_register_path do |f|%>
    <%=f.text_field :name, placeholder: "Name", class: 'form-control'%>
    <%=f.text_field :phoneNumber, placeholder: "Phone number", class: 'form-control'%>
    <%=f.text_field :school, placeholder: "School name", class: 'form-control'%>
    <%=f.password_field :password, placeholder: "Password", class: 'form-control'%>
    <%=f.password_field :cpassword, placeholder: "Confirm password", class: 'form-control'%>
    <%=f.submit "Register", onclick: "return validateRegister();"%>
<%end%>
