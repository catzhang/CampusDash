</style>

<script>
    function validateLogin() {
        
        var x = document.getElementById('login_username');
        if (x.value.length <=0 || x.value == "") {
        alert("Username must be filled out");
        return false;
        }
        
        var x2 = document.getElementById('login_password');
        if (x2.value.length <=0 || x2.value == "") {
        alert("Password must be filled out");
        return false;
        }
        
    }

    function validateRegister() {
        
        var x = document.getElementById('register_name');
        if (x.value.length <=0 || x.value == "") {
        alert("Name must be filled out");
        return false;
        }
        
      
        
        var x3 = document.getElementById('register_phoneNumber');
        if (x3.length <=0 || x3.value == "") {
        alert("Your phone number must be filled out");
        return false;
        }
        
        var x4 = document.getElementById('register_school');
        if (x4.length <=0 || x4.value == "") {
        alert("School name must be filled out");
        return false;
        }
        
        var x5 =document.getElementById('register_password');
        if (x5.length <=0 || x5.value == "") {
        alert("Password must be filled out");
        return false;
        }
        
        var x6 =document.getElementById('register_cpassword');
        if (x6.length <=0 || x6.value == "") {
        alert("Confirm password must be filled out");
        return false;
        }
        
        if (!x5.equals(x6))
        {
            alert("Your passwords don't match. Please enter your password again.");
            return false;
        }
    }
    
</script>


    
    
    
