<script>
    function validateForm() {
        
        var x = document.getElementById('info_name');
        if (x.value.length <=0 || x.value == "") {
        alert("Name must be filled out");
        return false;
        }
        
        var x2 = document.getElementById('info_restaurant')
        if (x2.length <=0 || x2.value == "") {
