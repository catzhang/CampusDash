        alert("Your order must be filled out");
        return false;
        }
        
        var x4 = document.getElementById('info_number');
        if ((x4.length <=0 || x4.value == "") && (x4.length != 10 || x4.length != 11)) {
        alert("Your phone number must be filled out");
        return false;
        
        for(int x = 0; x <= x4.length; x++){
            if(x4.chartAt(x) == '-' || x4.chartAt(x) == ')' ){
                
                x4.replaceAt(x, '');
            }
            
            
        }
        
        document.getElementById('info_number').value = x4;  
            
            
            
        }
        
        
        var x5 =document.getElementById('info_fromaddress');
        if (x5.length <=0 || x5.value == "") {
        alert("Your pickup location must be filled out");
        return false;
        }
    }
    
</script>

