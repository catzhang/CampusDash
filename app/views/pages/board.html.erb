
<style>
    h1{
        text-align: center;
        font:10px;
    }
    a {
      text-align:center;
      font-weight: bold;
    }
    h2{
        text-align: center;
        font-weight:bold;
    }
    h3{
        text-align: center;
        font-weight:bold;
    }
    .container {
      background-color: white;
      min-height: 100%;
      opacity:0.7;
      font-weight:bolder;
    }
    body{
      background-image:url("http://i.imgur.com/SKKB57E.jpg");
      background-size: 100% auto;
    }
    
    .box {
        height: 100%;
        margin-left:40;
        margin-right:40;
        padding: 15px; 
        opacity: 0.9;
    }
    
    #hide {
        visibility: hidden;
    }
    
    #save-button {
      border-radius: 4px;
      border: 1px solid #d1d3d5;
      color: #009BDB;
      text-transform: uppercase;
      background-color: #FFFFFF;
      padding: 23px 109px;
      height: auto;
    }
    
    #save-button:hover {
      color: #FFFFFF;
      background-color: #009BDB;
    }
</style>

<div class ="container">
<a href="/pages/index">Click here to order food!</a>
  <h3>POSTS:</h3>
<center>
  <% Post.all.reverse.each do |msg| %>
  <h1>----</h1>
      <div class="box">
    <p class="title"><b>Name:</b> <%= msg.name %></p>
    <p class="title"><b>Number:</b> <%= msg.phonenumber%></p>
    <p class="title"><b>Pickup location:</b><%= msg.pickup%> </p>
    <p class="title"><b>Food:</b> <%= msg.food%></p>
    <p class="title"><b>Restaurant:</b> <%= msg.shop%></p>
    <p class="title"><b>Time:</b>  <%=msg.created_at%></p>
    
    <%=form_for :bananna, url: pages_pickUp_path do |f|%>
      <div id="hide">
          <%=f.text_field :ph,value: msg.phonenumber%>
          <%=f.text_field :idPost,value: msg.id%>
         </div>
      <%=f.submit "Pickup" %>
    <%end%>
  <%end%>
</center>
    
</div>
   
       </div>
</div>

